<% include ../partials/header%>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to RestaurantsReview! </h1>
        <div class="container">
            <p>View our handpicked Restaurants.</p>
            <p>
                <a class="btn btn-primary btn-large" href="/restaurants/new">Add New Restaurants</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <div class="col-lg-12">
            <h3> Our Most Popular Restaurants</h3>
        </div>
        <% restaurants.forEach(function(restaurant){ %>
       <div class="col-md-3 col-sm-6">
           <div class="thumbnail">
               <img src="<%=restaurant.image%>">   
               <div class="caption">
                   <h4><%= restaurant.name %></h4> 
               </div>
               <p>
                   <a href='/restaurants/<%= restaurant._id%>' class="btn btn-primary">More Info</a>
               </p>
           </div>
        </div> 
    <% }); %>
    </div>
    
</div>
<% include ../partials/footer%>